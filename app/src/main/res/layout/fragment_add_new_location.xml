<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="241dp"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="37dp"
                            android:layout_marginRight="25dp"

                            android:text="Washroom Location"
                            android:textColor="#28104E"
                            android:textSize="16dp" />

                        <Button

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onAddLocationClick"
                            android:text="Add Location" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="37dp"
                            android:layout_marginRight="50dp"
                            android:text="Room Number"

                            android:textColor="#28104E"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/et_roomNumber"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:background="@drawable/rounded_edittext"
                            android:textColor="@color/black"
                            android:inputType="number"
                            android:maxLength="7"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="37dp"
                            android:layout_marginRight="30dp"
                            android:text="Washroom Name"

                            android:textColor="#28104E"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/et_washroomName"
                            android:layout_width="200dp"
                            android:layout_height="45dp"

                            android:background="@drawable/rounded_edittext"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="37dp"
                            android:layout_marginRight="50dp"
                            android:text="Gender"

                            android:textColor="#28104E"
                            android:textSize="16dp" />



                        <Spinner
                            android:id="@+id/sp_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/black"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="850dp"
                    android:background="#F9F9F9"
                    android:orientation="vertical"

                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="331dp"
                        android:layout_height="129dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:text="Cleanliness"
                                android:textColor="#270F4D"
                                android:textSize="20dp" />

                            <RatingBar
                                android:id="@+id/rb_ratingBar"
                                style="?android:attr/ratingBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:isIndicator="false"
                                android:numStars="5"
                                android:progressBackgroundTint="#F7F4F8"
                                android:progressTint="#9754CB"
                                android:secondaryProgressTint="#DEACF5"
                                android:stepSize="1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:layout_marginTop="40dp"
                        android:text="Optional"
                        android:textColor="#223F74"
                        android:textSize="20dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="331dp"
                        android:layout_height="129dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:text="Sufficient Paper Towels"
                                android:textColor="#270F4D"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/bt_paperTowelsYes"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="28dp"
                                    android:backgroundTint="@android:color/white"

                                    android:onClick="onPaperTowelYesClick"
                                    android:text="Yes"
                                    android:textColor="#B6B6B6" />

                                <Button
                                    android:id="@+id/bt_paperTowelsNo"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:onClick="onPaperTowelNoClick"

                                    android:text="No"
                                    android:textColor="#B6B6B6"
                                    android:backgroundTint="@android:color/white"
                                    />

                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="331dp"
                        android:layout_height="129dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:text="Sufficient Soap"
                                android:textColor="#270F4D"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <Button
                                    android:id="@+id/bt_soapYes"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:onClick="onSoapYesClick"

                                    android:text="Yes"
                                    android:textColor="#B6B6B6"
                                    android:backgroundTint="@android:color/white"
                                    android:layout_marginRight="28dp"
                                    />
                                <Button
                                    android:id="@+id/bt_soapNo"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:onClick="onSoapNoClick"

                                    android:text="No"
                                    android:textColor="#B6B6B6"
                                    android:backgroundTint="@android:color/white"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="331dp"
                        android:layout_height="129dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:text="Accessibility"
                                android:textColor="#270F4D"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <Button
                                    android:id="@+id/bt_accessYes"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:onClick="onAccessYesClick"

                                    android:text="Yes"
                                    android:textColor="#B6B6B6"
                                    android:backgroundTint="@android:color/white"
                                    android:layout_marginRight="28dp"
                                    />
                                <Button
                                    android:id="@+id/bt_accessNo"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:onClick="onAccessNoClick"

                                    android:text="No"
                                    android:textColor="#B6B6B6"
                                    android:backgroundTint="@android:color/white"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="331dp"
                        android:layout_height="129dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:text="Comments"
                                android:textColor="#270F4D"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/et_comment"
                                android:layout_width="300dp"
                                android:layout_height="65dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:hint="Enter your comment here"
                                android:inputType="textMultiLine"
                                android:background="@drawable/rounded_edittext"
                                android:textColor="@color/black"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_finish"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/checkmark"

        android:onClick="onAddNewWashroomClick"
       />
</RelativeLayout>
